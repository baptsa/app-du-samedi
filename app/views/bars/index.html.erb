<% @bars.each do |bar| %>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('press.jpg');">
        <div class="card-category"><h2><%= link_to bar.name, bar_path(bar) %></h2></div>
        <div class="card-description">
          <h2><%= bar.address %></h2>
        </div>

      </div>
    </div>
<% end %>
